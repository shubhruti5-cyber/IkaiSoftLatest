    <script>
        let currentIndex = 1;
        const totalLessons = 60;

        function loadLesson(id) {
            currentIndex = id;
            fetch(`/Course/Lesson?id=${id}`)
                .then(response => {
                    if (!response.ok) throw new Error("Network error");
                    return response.text();
                })
                .then(html => {
                    document.getElementById("lessonContent").innerHTML = html;
                    document.querySelectorAll(".bd-course-curriculum-content .title")
                        .forEach(p => p.classList.remove("active"));
                    const activePara = document.querySelector(`a[data-lesson='${id}'] .title`);
                    if (activePara) {activePara.classList.add("active");
                    const accordionBody = activePara.closest(".accordion-collapse");
                if (accordionBody && !accordionBody.classList.contains("show")) {
                    document.querySelectorAll(".accordion-collapse.show")
                        .forEach(openAcc => {
                            new bootstrap.Collapse(openAcc, { toggle: true });
                        });
                    new bootstrap.Collapse(accordionBody, { toggle: true });
                }

                    }
                })
        }
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("nextBtn").onclick = () => {
                if (currentIndex < totalLessons) loadLesson(currentIndex + 1);
            };

            document.getElementById("prevBtn").onclick = () => {
                if (currentIndex > 1) loadLesson(currentIndex - 1);
            };
            loadLesson(1);
        });

    </script>

    <script>
        const HTML_CODE = (`<h1>Welcome User</h1>`);

        require.config({
            paths: { vs: "https://cdn.jsdelivr.net/npm/monaco-editor/min/vs" }
        });

        window.MonacoEnvironment = {
            getWorkerUrl: function (workerId, label) {
                return `data:text/javascript;charset=utf-8,${encodeURIComponent(`
                    self.MonacoEnvironment = {
                        baseUrl: 'https://cdn.jsdelivr.net/npm/monaco-editor/min/'
                    };
                    importScripts('https://cdn.jsdelivr.net/npm/monaco-editor/min/vs/base/worker/workerMain.js');`)}`;
            }
        };

        require(["vs/editor/editor.main"], function () {
            createEditor(document.getElementById("editor"));
        });

        function createEditor(editorContainer) {
            window.editor = monaco.editor.create(editorContainer, {
                value: HTML_CODE,
                language: "html",
                theme: "vs-dark",
                minimap: { enabled: false },
                automaticLayout: true,
                contextmenu: false,
                fontSize: 12,
            });
        }
        function runCode() {
            const code = window.editor.getValue();
            document.getElementById("resultFrame").srcdoc = code;
        }
    </script>

