<section class="bd-contact-form-area section-space">
    <div class="container">
        <div class="row gy-30 justify-content-between align-items-center">
            <div class="col-xl-6 col-lg-6">
                <div class="bd-contact-form-wrapper">
                    <div class="bd-section-title-wrapper section-title-space" style="margin-top: 38px;">
                        <h2 class="bd-section-title mb-20">Get in touch</h2>
                        <p class="bd-section-paragraph">Our friendly team would love to hear from you.</p>
                    </div>
                    <div class="bd-contact-form">
                        <form method="post" id="contactForm">
                            <div class="row gy-30">
                                <!-- Full Name Field -->
                                <div class="col-md-12">
                                    <div class="form-input-box">
                                        <div class="form-input-title">
                                            <label for="firstName">Full Name<span>*</span></label>
                                        </div>
                                        <div class="form-input">
                                            <input name="Name" id="Name" type="text"
                                                   placeholder="First Name" required>
                                        </div>
                                    </div>
                                </div>

                                <!-- Email Address Field -->
                                <div class="col-md-12">
                                    <div class="form-input-box">
                                        <div class="form-input-title">
                                            <label for="emailAddress">Email Address<span>*</span></label>
                                        </div>
                                        <div class="form-input">
                                            <input name="Email" id="Email" type="email"
                                                   placeholder="Email Address" required>
                                        </div>
                                    </div>
                                </div>

                                <!-- Subject Field -->
                                <div class="col-md-12">
                                    <div class="form-input-box">
                                        <div class="form-input-title">
                                            <label for="subject">Subject</label>
                                        </div>
                                        <div class="form-input">
                                            <input name="Subject" id="Subject" type="text"
                                                   placeholder="Subject">
                                        </div>
                                    </div>
                                </div>

                                <!-- Message Field -->
                                <div class="col-xxl-12">
                                    <div class="form-input-box mb-15">
                                        <div class="form-input-title">
                                            <label for="message">Message<span>*</span></label>
                                        </div>
                                        <div class="form-input">
                                            <textarea id="Message" name="Message" placeholder="Message"
                                                      required></textarea>
                                        </div>
                                    </div>
                                    <div class="checkbox-option">
                                        <input id="course-check-1" type="checkbox">
                                        <label for="course-check-1">
                                            You agree to our friendly
                                            <span class="text-border-highlights">
                                                <a asp-controller="Home" asp-action="PrivacyPolicy">privacy policy</a>
                                                <span class="theme-black h-1px bottom-0"></span>
                                            </span>.
                                        </label>
                                    </div>
                                </div>

                                <!-- Submit Button -->
                                <div class="col-xxl-12">
                                    <div class="bd-contact-form-btn">
                                        <button class="bd-btn btn-primary w-100" type="submit">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6">
                <div class="bd-contact-form-thumb">
                    <img src="~/assets/images/contact/Ikai_Contact.png"
                         alt="images">
                </div>
            </div>
        </div>
    </div>
</section>
