@section Scripts {
    <script>
        $("#contactForm").submit(function (e) {
            e.preventDefault();
            if ($("#Name").val().trim() === "" ||
                $("#Email").val().trim() === "" ||
                $("#Message").val().trim() === "") {
                Swal.fire({
                    icon: 'warning',
                    title: 'Missing Fields',
                    text: '⚠️ Please fill out all required fields before submitting.'
                });
                return;
            }
            if (!$("#course-check-1").is(":checked")) {
                Swal.fire({
                    icon: 'warning',
                    title: 'Please Accept Terms',
                    text: '⚠️ Please read and accept our privacy policy before submitting.',
                    confirmButtonText: 'OK'
                });
                return;
            }
            $.ajax({
                type: "POST",
                url: "/Home/Contact",
                data: $(this).serialize(),
                success: function (res) {
                    if (res.success) {
                        Swal.fire({
                               icon: 'success',
        title: 'Success!',
        text: 'Your request has been submitted successfully. We will contact you shortly.',
        width: '40rem',        // increase popup size
        padding: '2em',        // more breathing space
        showConfirmButton: false,
         timer: 4000,
        customClass: {
            popup: 'swal-custom'
        }
                        });
                        $("#contactForm")[0].reset();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: res.message
                        });
                    }
                }
            });
        });
    </script>
}
